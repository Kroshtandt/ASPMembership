
@{
    ViewBag.Title = "Edit Role";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/knockout-3.4.2.js"></script>


<h2>Edit Role</h2>

<div class="row">
    <div class="col-lg-6">
        <form class="" data-bind="submit: updateRole">
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" name="name" data-bind="value: RoleEntity().Name" class="form-control" />
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success">Save</button>
            </div>
        </form>
    </div>
    <div class="col-lg-6">
        <div class="row">
            <div class="col-sm-6">
                <button class="btn btn-default" data-toggle="modal" data-target="#myModal">Add</button>
            </div>
            <div class="col-sm-6">
                <h3 class="text-right" style="margin-top: 5px;">Methods</h3>
            </div>
        </div>
        <div class="list-group" data-bind="foreach: RoleEntity().Methods">
            <a href="#" class="list-group-item" data-bind="text: MethodDescription, click: function(){$root.detachMethodToRole($data)}"></a>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-6">
        @Html.ActionLink("Back to list", "RolesList")
    </div>
</div>

<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Existing application functions</h4>
            </div>
            <div class="modal-body">
                <div class="list-group" data-bind="foreach: Methods()">
                    <a href="#" class="list-group-item" data-bind="click: function(){$root.attachMethodToRole($data)}">
                        <h4 class="list-group-item-heading" data-bind="text: MethodDescription"></h4>
                        <p class="text-success text-right" data-bind="text: MethodId"></p>
                    </a>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>

<script>
    roleId = '@ViewBag.RoleId';
</script>
<script src="~/Scripts/controllers/EditRoleController.js"></script>